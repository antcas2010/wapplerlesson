<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="validating" appConnect="local" components="{dmxValidator:{},dmxNotifications:{},dmxBrowser:{}}" -->
<dmx-notifications id="notifies1">
    <div is="dmx-browser" id="browser1"></div>
</dmx-notifications>
<meta name="ac:route" content="/validating">
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Validate code</h1>
            <small>With faded secondary text</small>
            <p>Enter the validation code from your email</p>
        </div>
    </div>
</div>
<div class="container">
    <form id="form1" is="dmx-serverconnect-form" method="post" action="/api/registration/code_validation" dmx-on:success="notifies1.success('The user validated!');notifies1.browser1.goto('/')" dmx-on:unauthorized="notifies1.warning('Unauthorised!')">

        <div class="form-group mb-3 row">
            <label for="email_input" class="col-sm-2 col-form-label">email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email_input" name="email_v" aria-describedby="input1_help" placeholder="Enter your email" required="" data-rule-email="">
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label for="validation_input" class="col-sm-2 col-form-label">Validation code</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="validation_input" name="code_v" aria-describedby="input1_help" placeholder="Enter your validation code" required="" maxlength="6" minlength="6">
            </div>
        </div><button id="btn1" class="btn btn-primary" type="submit">Register</button>
    </form>
</div>