{
  "meta": {
    "options": {
      "linkedFile": "/views/register.ejs",
      "linkedForm": "register1"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "firstname",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "firstname"
      },
      {
        "type": "text",
        "fieldName": "lastname",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "lastname"
      },
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:email": {
              "param": ""
            }
          }
        },
        "name": "email"
      },
      {
        "type": "text",
        "fieldName": "password",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:minlength": {
              "param": "8"
            }
          }
        },
        "name": "password"
      },
      {
        "type": "text",
        "fieldName": "hidden_spam_1",
        "options": {
          "rules": {}
        },
        "name": "hidden_spam_1"
      },
      {
        "type": "text",
        "fieldName": "hidden_spam_2",
        "options": {
          "rules": {}
        },
        "name": "hidden_spam_2"
      }
    ],
    "$_SESSION": [
      {
        "type": "text",
        "name": "regcode"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "validate_duplicate_record",
        "module": "validator",
        "action": "validate",
        "options": {
          "data": [
            {
              "name": "validate_duplicate_email",
              "value": "{{$_POST.email}}",
              "rules": {
                "db:notexists": {
                  "param": {
                    "connection": "db",
                    "table": "user",
                    "column": "email"
                  },
                  "message": "This email already exists in database."
                }
              },
              "fieldName": "email"
            }
          ]
        }
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{$_POST.hidden_spam_1.length()>0}}",
          "then": {
            "steps": {
              "name": "Unauthorised",
              "module": "core",
              "action": "response",
              "options": {
                "status": 401,
                "data": "Unauthorised"
              }
            }
          }
        },
        "outputType": "boolean"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{$_POST.hidden_spam_2!=$_SESSION.regcode}}",
          "then": {
            "steps": {
              "name": "Unauthorised",
              "module": "core",
              "action": "response",
              "options": {
                "status": 401,
                "data": "Unauthorised"
              }
            }
          }
        },
        "outputType": "boolean"
      },
      {
        "name": "hash_password",
        "module": "crypto",
        "action": "passwordHash",
        "options": {
          "password": "{{$_POST.password}}"
        },
        "outputType": "text",
        "output": true
      },
      {
        "name": "insert",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "db",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "user",
                "column": "password",
                "type": "text",
                "value": "{{hash_password}}"
              },
              {
                "table": "user",
                "column": "email",
                "type": "text",
                "value": "{{$_POST.email}}"
              },
              {
                "table": "user",
                "column": "first_name",
                "type": "text",
                "value": "{{$_POST.firstname}}"
              },
              {
                "table": "user",
                "column": "last_name",
                "type": "text",
                "value": "{{$_POST.lastname}}"
              }
            ],
            "table": "user",
            "returning": "iuser_d",
            "query": "INSERT INTO user\n(password, email, first_name, last_name) VALUES (:P1 /* {{hash_password}} */, :P2 /* {{$_POST.email}} */, :P3 /* {{$_POST.firstname}} */, :P4 /* {{$_POST.lastname}} */)",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{hash_password}}",
                "test": ""
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{$_POST.email}}",
                "test": ""
              },
              {
                "name": ":P3",
                "type": "expression",
                "value": "{{$_POST.firstname}}",
                "test": ""
              },
              {
                "name": ":P4",
                "type": "expression",
                "value": "{{$_POST.lastname}}",
                "test": ""
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      },
      {
        "name": "insert_role",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "db",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "role",
                "column": "user_id",
                "type": "text",
                "value": "{{insert.identity}}"
              },
              {
                "table": "role",
                "column": "role",
                "type": "text",
                "value": "M"
              }
            ],
            "table": "role",
            "returning": "role_id",
            "query": "INSERT INTO role\n(user_id, role) VALUES (:P1 /* {{insert.identity}} */, 'M')",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{insert.identity}}",
                "test": ""
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      }
    ]
  },
  "usedModules": {
    "argon2": "^0.28.3"
  }
}